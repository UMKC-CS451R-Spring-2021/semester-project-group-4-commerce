@page

@model Microsoft.AspNetCore.Identity.UI.V4.Pages.Account.Manage.Internal.ChangePasswordModel
@{
    ViewData["Title"] = "Change password";
}

<style>
    h2 {
        font-family: 'Poppins', sans-serif;
    }

    body, p {
        font-family: 'Open Sans', sans-serif;
    }
</style>

<div class="col-12 card">
    <div class="col-12 row">
        <p>&nbsp;</p>
    </div>
    <div class="col-12 row">
        <div class="col-md-8">
            <center>
                <img src="/css/images/commerce-bank-vector-logo-large.png" width="90%" />
            </center>
        </div>
        <div class="col-md-4">
            <section>
                <h2>@ViewData["Title"]</h2>
                <partial name="_StatusMessage" for="StatusMessage" />
                <form id="change-password-form" method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Input.OldPassword"></label>
                        <input asp-for="Input.OldPassword" class="form-control" />
                        <span asp-validation-for="Input.OldPassword" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.NewPassword"></label>
                        <input asp-for="Input.NewPassword" class="form-control" />
                        <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.ConfirmPassword"></label>
                        <input asp-for="Input.ConfirmPassword" class="form-control" />
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Update password</button>
                    </div>
                    <div class="form-group">
                        <a href="/Settings">Go Back</a>
                    </div>
                </form>
            </section>
        </div>
    </div>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
